@model Restaurant.Entity.Entity.Flavors

@{
    ViewBag.Title = "UpdateFlavors";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="pd-ltr-20 xs-pd-20-10">
    <div class="min-height-200px">
        <div class="page-header">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="title">
                        <h3>Lezzetlerimiz Güncelle</h3>
                    </div>
                </div>
                <div class="col-md-6 col-sm-12 text-right">
                    <img src="~/Areas/Admin/Context/mekasoftware/180x180-M.png" alt="Kadir ARİ" width="50" />
                </div>
            </div>
        </div>
        @if (ViewBag.Mesaj != null)
        {
            <div class="pd-20 card-box mb-30">
                <div class="clearfix">
                    <div class="pull-left">
                        <h4 class="text-blue h4">Hata Mesajı</h4>
                    </div>
                </div>
                <div>
                    <p>@ViewBag.Mesaj</p>
                </div>
            </div>
        }
        <div class="pd-20 card-box mb-30">
            <div class="clearfix">
                <div class="pull-left">
                    <h4 class="text-blue h4">Lezzetlerimiz Güncelle</h4>
                </div>
            </div>
            <!-- Buraya Form Kısmını Ekle -->
            @using (Html.BeginForm("UpdateFlavors", "Flavors", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-2">Başlık</label>
                <div class="col-md-12">
                    <input type="text" name="Title" value="@Model.Title" class="form-control" required placeholder="Lütfen Başlık Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Alt Başlık</label>
                <div class="col-md-12">
                    <input type="text" name="Content" class="form-control" value="@Model.Content" required placeholder="Lütfen Alt Başlık Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Resim</label>
                <div class="col-md-12">
                    <input type="file" name="File" value="@Model.File" class="form-control" />
                    <p style="color:darkred;">Resim Boyutu(500x500)</p>
                    @Html.ValidationMessageFor(model => model.File, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Sıra</label>
                <div class="col-md-12">
                    <input type="number" name="Rank" value="@Model.Rank" class="form-control" required placeholder="Lütfen Sırasını Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.Rank, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Page Url</label>
                <div class="col-md-12">
                    <input type="text" name="pageUrl" value="@Model.pageUrl" class="form-control" placeholder="Lütfen Page Url Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.pageUrl, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Haber Url</label>
                <div class="col-md-12">
                    <input type="text" name="haberUrl" value="@Model.haberUrl" class="form-control" placeholder="Lütfen Haber Url Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.haberUrl, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Basın Url</label>
                <div class="col-md-12">
                    <input type="text" name="basinUrl" value="@Model.basinUrl" class="form-control" placeholder="Lütfen Basın Url Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.basinUrl, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Kategori Url</label>
                <div class="col-md-12">
                    <input type="text" name="kategoriUrl" value="@Model.kategoriUrl" class="form-control" placeholder="Lütfen Kategori Url Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.kategoriUrl, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Ürün Url</label>
                <div class="col-md-12">
                    <input type="text" name="urunUrl" value="@Model.urunUrl" class="form-control" placeholder="Lütfen Ürün Url Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.urunUrl, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Aktif Durumu</label>
                <div class="col-md-12">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.IsActive) Aktif | Pasif
                        @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-outline-success"><i class="fa fa-check"></i>Lezzetlerimiz Güncelle</button>
                        <a href="/Admin/Dashboard/Flavors" class="btn btn-outline-dark"><i class="fa fa-reply-all"></i> Listeye Geri Dön</a>
                    </div>
                </div>
            </div>
        </div>
            }
            <!--Form bitiş-->
        </div>
    </div>
</div>
