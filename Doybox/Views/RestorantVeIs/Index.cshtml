@model IEnumerable<Restaurant.Entity.Entity.RestaurantBusines>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{Html.RenderAction("PartialRestaurantConstantValue", "RestorantVeIs");}
@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <section class="inner-section about-company">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-12">
                        <div class="about-content">
                            <h2 title="@item.Tittle">@item.Tittle</h2>
                            <p>
                                @Html.Raw(item.Content)
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
}
else
{
    <section class="inner-section about-company">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-heading">
                        <h2>Restaurant ve İşletmeler</h2>
                    </div>
                </div>
            </div>
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="about-content">
                        <h2>Bu Sayfa Yapım Aşamasındadır.</h2>
                        <p>
                            Anlayışınız için teşekkür ederiz. sitemizde diğer aktif olan sayfaları gezebilirsiniz.
                        </p>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="about-img">
                        <img src="~/Content/Site/images/doybox-2.png" alt="Doybox">
                    </div>
                </div>
            </div>
        </div>
    </section>
}