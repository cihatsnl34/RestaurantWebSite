@model Restaurant.Entity.Entity.InformationMail
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{Html.RenderAction("PartialBilgiAlConstantValue", "BilgiAl");}
<section class="inner-section contact-part">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="col-12">
                    <div class="section-heading">
                        <h2>Doybox İletişim</h2>
                    </div>
                </div>
                @{Html.RenderAction("PartialContactInformation", "BilgiAl");}
            </div>
            <div class="col-lg-8">
                <form class="contact-form" action="/bilgi-al" method="post">
                    <h4>Bizimle iletişime geçip bilgi alabilirsiniz.</h4>
                    <div class="form-group">
                        @if (ViewBag.Mesaj != null)
                        {
                            <div class="form-group">
                                <p class="alert alert-info">@ViewBag.Mesaj</p>
                            </div>
                        }
                        @if (ViewBag.Hata != null)
                        {
                            <div class="form-group">
                                <p class="alert alert-danger">@ViewBag.Hata</p>
                            </div>
                        }
                        <div class="form-input-group">
                            <input class="form-control" type="text" required
                                   placeholder="Adınız Soyadınız" name="NameSurname"><i class="icofont-user-alt-3"></i>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-input-group">
                            <input class="form-control" type="text" required
                                   placeholder="Email Adresiniz" name="Email"><i class="icofont-email"></i>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-input-group">
                            <input class="form-control" type="tel" required
                                   placeholder="Telefon Giriniz" name="Phone" maxlength="11"><i class="icofont-phone"></i>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-input-group">
                            <input class="form-control" type="text" required
                                   placeholder="Konu Giriniz" name="Subject"><i class="icofont-book-mark"></i>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-input-group">
                            <textarea class="form-control" required
                                      placeholder="Mesajınızı Giriniz" name="Messages"></textarea><i class="icofont-paragraph"></i>
                        </div>
                    </div><button type="submit" class="form-btn-group">
                        <i class="fas fa-envelope"></i><span>
                            Bilgi Al
                        </span>
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>