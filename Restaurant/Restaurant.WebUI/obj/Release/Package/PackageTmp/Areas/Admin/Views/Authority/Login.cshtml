<body class="login-page">
    <div class="login-header box-shadow">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <div class="brand-logo">
                <a href="login.html">
                    <img src="~/Areas/Admin/Context/mekasoftware/MiniLogo.png" alt="MekaSoftware">
                </a>
            </div>
            <div class="login-menu">
                <ul>
                    <li><a href="/" target="_blank"><img src="~/Content/Site/images/doybox_logo-2.png"  width="200"/></a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="login-wrap d-flex align-items-center flex-wrap justify-content-center">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 col-lg-7">
                    <img src="~/Areas/Admin/Context/Admin/vendors/images/login-page-img.png" alt="MEKASOFTWARE">
                </div>
                <div class="col-md-6 col-lg-5">
                    <div class="login-box bg-white box-shadow border-radius-10">
                        <div class="login-title">
                            <h2 class="text-center text-primary">MEKASOFTWARE CMS GİRİŞ</h2>
                        </div>
                        <form action="/Admin/Authority/Login" method="post">
                            <div class="input-group custom">
                                <input type="text" name="Username" class="form-control form-control-lg" placeholder="Kullanıcı Adı">
                                <div class="input-group-append custom">
                                    <span class="input-group-text"><i class="icon-copy dw dw-user1"></i></span>
                                </div>
                            </div>
                            <div class="input-group custom">
                                <input type="password" name="Password" class="form-control form-control-lg" placeholder="Kullanıcı Şifre">
                                <div class="input-group-append custom">
                                    <span class="input-group-text"><i class="dw dw-padlock1"></i></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="input-group mb-0">
                                        <!--
                                            use code for form submit
                                            <input class="btn btn-primary btn-lg btn-block" type="submit" value="Sign In">
                                        -->
                                        <button class="btn btn-primary btn-lg btn-block" type="submit">Giriş Yap</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- js -->
    <script src="~/Areas/Admin/Context/Admin/vendors/scripts/core.js"></script>
    <script src="~/Areas/Admin/Context/Admin/vendors/scripts/script.min.js"></script>
    <script src="~/Areas/Admin/Context/Admin/vendors/scripts/process.js"></script>
    <script src="~/Areas/Admin/Context/Admin/vendors/scripts/layout-settings.js"></script>
</body>
