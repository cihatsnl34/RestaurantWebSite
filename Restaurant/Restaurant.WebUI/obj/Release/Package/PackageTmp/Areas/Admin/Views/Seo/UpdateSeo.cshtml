@model Restaurant.Entity.Entity.MainGoogleSeo

@{
    ViewBag.Title = "UpdateSeo";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="pd-ltr-20 xs-pd-20-10">
    <div class="min-height-200px">
        <div class="page-header">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="title">
                        <h3>Yeni Ana Google Seo Güncelle</h3>
                    </div>
                </div>
                <div class="col-md-6 col-sm-12 text-right">
                    <img src="~/Areas/Admin/Context/mekasoftware/180x180-M.png" alt="Meka Software" width="50" />
                </div>
            </div>
        </div>
        @if (ViewBag.Mesaj != null)
        {
            <div class="pd-20 card-box mb-30">
                <div class="clearfix">
                    <div class="pull-left">
                        <h4 class="text-blue h4">Hata Mesajı</h4>
                    </div>
                </div>
                <div>
                    <p>@ViewBag.Mesaj</p>
                </div>
            </div>
        }
        <div class="pd-20 card-box mb-30">
            <div class="clearfix">
                <div class="pull-left">
                    <h4 class="text-blue h4">Yeni Ana Google Seo Güncelle</h4>
                </div>
            </div>
            <!-- Buraya Form Kısmını Ekle -->
            @using (Html.BeginForm("UpdateSeo", "Seo", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label class="control-label col-md-2">PDF</label>
                <div class="col-md-12">
                    <input type="file" name="File" value="@Model.File" class="form-control" />(Sadece Katolog sayfası için geçerlidir.)
                    @Html.ValidationMessageFor(model => model.File, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Sayfa Adı</label>
                <div class="col-md-12">
                    <input type="text" name="PageName" value="@Model.PageName" class="form-control" required placeholder="Lütfen Ad Giriniz" maxlength="170" />
                    @Html.ValidationMessageFor(model => model.PageName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Sayfa Rank</label>
                <div class="col-md-12">
                    <input type="number" name="Rank" value="@Model.Rank" class="form-control" required placeholder="Lütfen Sayfa Sıralamasını Giriniz" />
                    @Html.ValidationMessageFor(model => model.Rank, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Sayfa URL</label>
                <div class="col-md-12">
                    <select class="custom-select2 form-control" name="PageUrl" required style="width: 100%; height: 38px;">
                        <optgroup label="Lütfen Sayfanızı Seçiniz...">
                            <option value="@Model.PageUrl">@Model.PageUrl</option>
                            <option value="Anasayfa">Anasayfa</option>
                            <option value="Katalog">Katalog</option>
                            <option value="Hakkımızda">Hakkımızda</option>
                            <option value="Şirket Politikamız">Şirket Politikamız</option>
                            <option value="Vizyonumuz">Vizyonumuz</option>
                            <option value="Misyonumuz">Misyonumuz</option>
                            <option value="Lezzetlerimiz">Lezzetlerimiz</option>
                            <option value="Restaurant">Restaurant</option>
                            <option value="Basında Biz">Basında Biz</option>
                            <option value="Sıkça Sorulan Sorular">Sıkça Sorulan Sorular</option>
                            <option value="Sağlıklı Beslen">Sağlıklı Beslen</option>
                            <option value="Videolar">Videolar</option>
                            <option value="Bizden Haberler">Bizden Haberler</option>
                            <option value="İletişim">İletişim</option>
                            <option value="Kurumsal">Kurumsal</option>
                            <option value="Bilgi Al">Bilgi Al</option>
                            <option value="İnsan Kaynakları">İnsan Kaynakları</option>
                        </optgroup>
                    </select>
                    @Html.ValidationMessageFor(model => model.PageUrl, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Seo Anahtar Kelime</label>
                <div class="col-md-12">
                    <input type="text" name="seoKeywords" value="@Model.seoKeywords" class="form-control" required placeholder="Lütfen Seo Anahtar Kelime Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.seoKeywords, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Seo Açıklama</label>
                <div class="col-md-12">
                    <input type="text" name="seoKDescription" value="@Model.seoKDescription" class="form-control" required placeholder="Lütfen Seo Açıklama Giriniz" maxlength="170" />
                    @Html.ValidationMessageFor(model => model.seoKDescription, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Seo Konu</label>
                <div class="col-md-12">
                    <input type="text" name="seoSubject" value="@Model.seoSubject" class="form-control" required placeholder="Lütfen Seo Konu Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.seoSubject, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Seo Twitter Başlık</label>
                <div class="col-md-12">
                    <input type="text" name="seoTwitterTitle" value="@Model.seoTwitterTitle" class="form-control" required placeholder="Lütfen Seo Twitter Başlık Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.seoTwitterTitle, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Seo Twitter Açıklama</label>
                <div class="col-md-12">
                    <input type="text" name="seoTwitterDescription" value="@Model.seoTwitterDescription" class="form-control" required placeholder="Lütfen Seo Twitter Açıklama Giriniz" maxlength="170" />
                    @Html.ValidationMessageFor(model => model.seoTwitterDescription, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Seo Twitter URL</label>
                <div class="col-md-12">
                    <input type="text" name="seoTwitterUrl" value="@Model.seoTwitterUrl" class="form-control" required placeholder="Seo Twitter URL" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.seoTwitterUrl, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Seo Facebook Başlık</label>
                <div class="col-md-12">
                    <input type="text" name="seoFacebookTitle" value="@Model.seoFacebookTitle" class="form-control" required placeholder="Lütfen Seo Facebook Başlık Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.seoFacebookTitle, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Seo Facebook Açıklama</label>
                <div class="col-md-12">
                    <input type="text" name="seoFacebookDescription" value="@Model.seoFacebookDescription" class="form-control" required placeholder="Lütfen Seo Facebook Açıklama Giriniz" maxlength="170" />
                    @Html.ValidationMessageFor(model => model.seoFacebookDescription, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Seo Facebook URL</label>
                <div class="col-md-12">
                    <input type="text" name="seoFacebookUrl" value="@Model.seoFacebookUrl" class="form-control" required placeholder="Lütfen Seo Facebook URL Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.seoFacebookUrl, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Seo Yayımcı</label>
                <div class="col-md-12">
                    <input type="text" name="seoPublisher" value="@Model.seoPublisher" class="form-control" required placeholder="Lütfen Seo Yayımcı Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.seoPublisher, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Seo Sınıflandırma</label>
                <div class="col-md-12">
                    <input type="text" name="seoClassification" value="@Model.seoClassification" class="form-control" required placeholder="Lütfen Seo Sınıflandırma Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.seoClassification, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label col-md-2">Büyük Açılır Menü</label>
                        <div class="col-md-12">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.LargeDropDown) Aktif | Pasif
                                @Html.ValidationMessageFor(model => model.LargeDropDown, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label col-md-2">Küçük Açılır Menü</label>
                        <div class="col-md-12">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.SmallDropDown) Aktif | Pasif
                                @Html.ValidationMessageFor(model => model.SmallDropDown, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>



            <div class="form-group">
                <label class="control-label col-md-2">Aktif Durumu</label>
                <div class="col-md-12">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.IsActive) Aktif | Pasif
                        @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-outline-success"><i class="fa fa-check"></i> Yeni Kullanıcı Güncelle</button>
                        <a href="/Admin/Dashboard/MainGoogleSeo" class="btn btn-outline-dark"><i class="fa fa-reply-all"></i> Listeye Geri Dön</a>
                    </div>
                </div>
            </div>
        </div>
            }
            <!--Form bitiş-->
        </div>
    </div>
</div>