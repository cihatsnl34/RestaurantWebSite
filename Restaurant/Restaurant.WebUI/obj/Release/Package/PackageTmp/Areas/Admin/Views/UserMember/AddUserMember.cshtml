@model Restaurant.Entity.Entity.UserMember

@{
    ViewBag.Title = "AddUserMember";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

using (Html.BeginForm())
{
@Html.AntiForgeryToken()
}
<div class="pd-ltr-20 xs-pd-20-10">
    <div class="min-height-200px">
        <div class="page-header">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="title">
                        <h3>Yeni Kullanıcı Ekle</h3>
                    </div>
                </div>
                <div class="col-md-6 col-sm-12 text-right">
                    <img src="~/Areas/Admin/Context/mekasoftware/180x180-M.png" alt="Meka Software" width="50" />
                </div>
            </div>
        </div>
        @if (ViewBag.Mesaj != null)
        {
            <div class="pd-20 card-box mb-30">
                <div class="clearfix">
                    <div class="pull-left">
                        <h4 class="text-blue h4">Hata Mesajı</h4>
                    </div>
                </div>
                <div>
                    <p>@ViewBag.Mesaj</p>
                </div>
            </div>
        }
        <div class="pd-20 card-box mb-30">
            <div class="clearfix">
                <div class="pull-left">
                    <h4 class="text-blue h4">Yeni Kullanıcı Ekle</h4>
                </div>
            </div>
            <!-- Buraya Form Kısmını Ekle -->
            @using (Html.BeginForm("AddUserMember", "UserMember", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="control-label col-md-2">İsim</label>
                        <div class="col-md-12">
                            <input type="text" name="Name" class="form-control" required placeholder="Lütfen İsim Giriniz" maxlength="110" />
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Soyad</label>
                        <div class="col-md-12">
                            <input type="text" name="Surname" class="form-control" required placeholder="Lütfen Soyad Giriniz" maxlength="110" />
                            @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                    <label class="control-label col-md-2">Kullanıcı Adı</label>
                    <div class="col-md-12">
                        <input type="text" name="Username" class="form-control" required placeholder="Lütfen Kullanıcı Adı Giriniz" maxlength="110" />
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Şifre</label>
                    <div class="col-md-12">
                        <input type="text" name="Password" class="form-control" required placeholder="Lütfen Şifre Giriniz" maxlength="110" />
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Mail</label>
                    <div class="col-md-12">
                        <input type="text" name="Email" class="form-control" required placeholder="Lütfen E-Mail Giriniz" maxlength="110" />
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-outline-success"><i class="fa fa-check"></i> Yeni Kullanıcı Ekle</button>
                            <a href="/Admin/Dashboard/UserMember" class="btn btn-outline-dark"><i class="fa fa-reply-all"></i> Listeye Geri Dön</a>
                        </div>
                    </div>
                </div>
            </div>
            }
            <!--Form bitiş-->
        </div>
    </div>
</div>

