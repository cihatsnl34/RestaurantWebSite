                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Etiket</label>
                <div class="col-md-12">
                    <input type="text" class="form-control" value="@Model.Feature" name="Feature" placeholder="Lütfen Ürün Özellik Giriniz Örn: Yeni | Özel Ürün" maxlength="50">
                    @Html.ValidationMessageFor(model => model.Feature, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Sırlama</label>
