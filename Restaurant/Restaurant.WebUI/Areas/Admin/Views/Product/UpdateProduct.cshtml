                <div class="col-md-12">
                    <input type="text" name="seoFacebookUrl" value="@Model.seoFacebookUrl" class="form-control" required placeholder="Lütfen Seo Facebook URL Giriniz" maxlength="110" />
                    @Html.ValidationMessageFor(model => model.seoFacebookUrl, "", new { @class = "text-danger" })
                </div>
            </div>
